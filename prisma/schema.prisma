generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
}

model Files {
  ItemID       Int       @id(map: "PK_Files") @default(autoincrement())
  Name         String    @db.NChar(40)
  ParentID     Int?
  Size         Int?
  IsFile       Boolean?
  MimeType     String?   @db.NChar(200)
  Content      Bytes?
  DateModified DateTime? @db.DateTime
  DateCreated  DateTime? @db.DateTime
  HasChild     Boolean?
  IsRoot       Boolean?
  Type         String?   @db.VarChar(255)
  FilterPath   String?   @db.NVarChar(200)
}

